
@{
    ViewBag.Title = "Basic Tables";
}

<div class="row">
    <div class="col-12 col-md-6">
        <div class="card shadow-sm p-0 p-lg-1 p-xxl-2 mb-4">
            <div class="card-body">
                <h5 class="card-title">Basic Example</h5>
                <p class="text-muted">For basic styling—light padding and only horizontal dividers—add the base class .table</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Lastname</th>
                            <th>Age</th>
                            <th>Email</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>Name</td>
                                <td>Lastname</td>
                                <td>Age</td>
                                <td>Email</td>
                                <td>Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
